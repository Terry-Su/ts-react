{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
	],
	"compilerOptions": {
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"outDir": "./build/",
		"sourceMap": true,
		"lib": [
			"dom",
			"es2016"
		],
		"types": [
			"jasmine",
		],
		"typeRoots": [
			"node_modules/@types/**/*",
			// "src/__typings__/**/*"
		],
		"allowSyntheticDefaultImports": true,
	}
}
